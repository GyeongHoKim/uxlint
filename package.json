{
	"name": "uxlint",
	"version": "0.0.0",
	"private": false,
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git@github.com:GyeongHoKim/uxlint.git"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org"
	},
	"keywords": [
		"ui",
		"ux",
		"ai",
		"playwright",
		"mcp"
	],
	"author": "GyeongHoKim",
	"bugs": {
		"url": "https://github.com/GyeongHoKim/uxlint/issues"
	},
	"homepage": "https://github.com/GyeongHoKim/uxlint#readme",
	"engines": {
		"node": ">=18.18.0"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"compile": "tsc --noEmit",
		"test": "prettier --check . && xo \"source/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\" && ava",
		"test:coverage": "prettier --check . && xo \"source/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\" && c8 ava",
		"lint": "xo \"source/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
		"format": "prettier --write .",
		"prepare": "husky"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"ink": "^5.2.1",
		"ink-big-text": "^2.0.0",
		"ink-spinner": "^5.0.0",
		"meow": "^11.0.0",
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^6.4.1",
		"c8": "^10.1.3",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"husky": "^9.1.7",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.8",
		"ts-node": "^10.9.1",
		"tsimp": "2.0.12",
		"typescript": "5.5.4",
		"xo": "^1.2.2"
	},
	"xo": {
		"react": true,
		"prettier": true,
		"files": [
			"source/**/*.{ts,tsx}",
			"tests/**/*.{ts,tsx}"
		],
		"ignores": [
			"dist/**",
			"**/*.config.js",
			"**/*.config.cjs",
			"**/*.config.mjs",
			"**/*.mjs"
		],
		"rules": {
			"react/prop-types": "off",
			"react/react-in-jsx-scope": "off",
			"unicorn/expiring-todo-comments": "off"
		},
		"semicolon": true
	}
}
